# CapRover/Production template (do NOT commit real secrets)

# App Settings
APP_NAME=ACFLP Backend
APP_DESCRIPTION=African Community for Language Preservation Backend API
APP_VERSION=1.0.0
LICENSE=MIT
CONTACT_NAME=ACFLP Team
CONTACT_EMAIL=yours@email.com

# Environment
ENVIRONMENT=production

# Security
SECRET_KEY=replace-with-strong-random-32+chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (prefer single URL). Replace <pg-app> and credentials.
# POSTGRES_URL=postgresql://postgres:<password>@k<pg-app>:5432/<db>
# Alternatively, set individual parts if you prefer:
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=<password>
# POSTGRES_SERVER=--<pg-app>
# POSTGRES_PORT=5432
# POSTGRES_DB=<db>

# Admin User
ADMIN_NAME=ACFLP Admin
ADMIN_EMAIL=emm@kk.org
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-in-production

# Redis
# If no password:
# REDIS_CACHE_URL=redis://--<redis-app>:6379/0
# REDIS_RATE_LIMIT_URL=redis://--<redis-app>:6379/2
# If password required (recommended), include it after ':'
# REDIS_CACHE_URL=redis://:<password>@--<redis-app>:6379/0
# REDIS_RATE_LIMIT_URL=redis://:<password>@--<redis-app>:6379/2

# Redis Queue (ARQ reads discrete fields, not URL)
REDIS_QUEUE_HOST=--<redis-app>
REDIS_QUEUE_PORT=6379
# REDIS_QUEUE_PASSWORD=<password-if-any>
REDIS_QUEUE_DB=1

# Rate Limiting
DEFAULT_RATE_LIMIT_LIMIT=100
DEFAULT_RATE_LIMIT_PERIOD=3600

# Client Cache
CLIENT_CACHE_MAX_AGE=60

# Admin Panel
CRUD_ADMIN_ENABLED=true
CRUD_ADMIN_MOUNT_PATH=/admin
CRUD_ADMIN_MAX_SESSIONS=10
CRUD_ADMIN_SESSION_TIMEOUT=1440
SESSION_SECURE_COOKIES=true
CRUD_ADMIN_TRACK_EVENTS=true
CRUD_ADMIN_TRACK_SESSIONS=true
CRUD_ADMIN_REDIS_ENABLED=false

# Google OAuth (set to your domain)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URI=https://api.your-domain.tld/api/v1/auth/google/callback
FRONTEND_URL=https://app.your-domain.tld

# Notes:
# - On CapRover, set these in the app's Environment tab; do not mount a .env file.
# - The application also supports DATABASE_URL as an alias for POSTGRES_URL.

