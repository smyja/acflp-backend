# App Settings (local dev)
APP_NAME=ACFLP Backend (Local)
APP_DESCRIPTION=African  for Language Preservation Backend API
APP_VERSION=1.0.0
LICENSE=MIT
CONTACT_NAME=ACFLP Team
CONTACT_EMAIL=dev@example.com

# Environment
ENVIRONMENT=local

# Security - DEVELOPMENT ONLY
SECRET_KEY=dev-secret-key-change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (docker-compose local defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=web_test
POSTGRES_URL=postgresql://postgres:postgres@db:5432/web_test

# Admin User (development)
ADMIN_NAME=ACFLP Admin
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Redis Cache (local)
REDIS_CACHE_HOST=redis
REDIS_CACHE_PORT=6379
REDIS_CACHE_URL=redis://redis:6379/0

# Redis Queue (local)
REDIS_QUEUE_HOST=redis
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_DB=1

# Redis Rate Limiter (local)
REDIS_RATE_LIMIT_HOST=redis
REDIS_RATE_LIMIT_PORT=6379
REDIS_RATE_LIMIT_URL=redis://redis:6379/2

# Rate Limiting
DEFAULT_RATE_LIMIT_LIMIT=100
DEFAULT_RATE_LIMIT_PERIOD=3600

# Client Cache
CLIENT_CACHE_MAX_AGE=60

# Admin Panel
CRUD_ADMIN_ENABLED=true
CRUD_ADMIN_MOUNT_PATH=/admin
CRUD_ADMIN_MAX_SESSIONS=10
CRUD_ADMIN_SESSION_TIMEOUT=1440
SESSION_SECURE_COOKIES=false
CRUD_ADMIN_TRACK_EVENTS=true
CRUD_ADMIN_TRACK_SESSIONS=true
CRUD_ADMIN_REDIS_ENABLED=false
CRUD_ADMIN_ENFORCE_HTTPS=false

# Google OAuth (leave blank for local unless testing)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
FRONTEND_URL=http://localhost:3000

